            }
        </tr>
        <tr>
            <td class="m-0 p-0" colspan="2">
                <div class="container">
                    <div class="row p-0">
                        <div class="col col-6 m-0 gy-0">
                            @if (Model.Kast == ClassEnum.Warrior)
                            {
                                <p style="white-space: pre-line">Strenght Damage</p>
                            }
                            else
                            {
                                <p style="white-space: pre-line">Strenght Defense</p>
                            }
                        </div>
                        <div class="col col-2 m-0">
                            @if (Model.Kast == ClassEnum.Warrior)
                            {
                                <p style="white-space: pre-line">@Model.Str @Model.Damage</p>
                            }
                            else
                            {
                                <p style="white-space: pre-line">@Model.Str @Model.Defence</p>
                            }
                        </div>
                        <div class="col col-2">
                            <button type="button" class="btn btn-info statButton"><i class="fa-solid fa-plus"></i></button>
                        </div>
                    </div>
                </div>
            <td class="m-0 p-0" colspan="2">
                <div class="container">
                    <div class="row p-0">
                        <div class="col col-6 m-0 gy-0">
                            <p style="white-space: pre-line">Constitution Hit&nbspPoints</p>
                        </div>
                        <div class="col col-2 m-0">
                            <p style="white-space: pre-line">@Model.Vit @Model.Hp</p>
                        </div>
                        <div class="col col-2">
                            <button type="button" class="btn btn-info statButton"><i class="fa-solid fa-plus"></i></button>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
