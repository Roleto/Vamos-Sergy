                </td>
            }
            else
            {
                <td id="@EquipmentEnum.Weapon.ToString()"><img class="icon" src="/Images\NullImages\weapon.png" /></td>
            }
            @if (Model.Kast == ClassEnum.Warrior)
            {
                @if (Model.Equipment.ContainsKey(EquipmentEnum.Shield) && Model.Equipment[EquipmentEnum.Shield] != null)
                {
                    ViewData["eq"] = $"{EquipmentEnum.Shield.ToString()}Link";
                    <td id="@EquipmentEnum.Shield.ToString()" ondblclick="location.href='@Url.Action("UnEquipItem", "Main" , new { equipment=EquipmentEnum.Shield, name = ViewData["name"]})'">
                        <partial name="_EquipmentLayout" model="@Model.Equipment[EquipmentEnum.Shield]" view-data="@ViewData" />
                    </td>
                }
                else
                {
                    <td id="@EquipmentEnum.Shield.ToString()"><img class="icon" src="/Images\NullImages\shield.png" /></td>
                }
            }
            else
            {
                @if (Model.Equipment.ContainsKey(EquipmentEnum.Weapon) && Model.Equipment[EquipmentEnum.Weapon] != null)
                {
                    ViewData["eq"] = $"{EquipmentEnum.Weapon.ToString()}2Link";
                    <td id="@EquipmentEnum.Weapon.ToString()2" ondblclick="location.href='@Url.Action("UnEquipItem", "Main" , new { equipment=EquipmentEnum.Weapon, name = ViewData["name"]})'">
                        <img class="icon" src="@Url.Action("GetInventoryImage", "Main",
                        new { id = Model.Equipment[EquipmentEnum.Weapon].ItemId, secondary=true})" />
                    </td>
                }
                else
                {
                    <td id="@EquipmentEnum.Weapon.ToString()"><img class="icon" src="/Images\NullImages\blank.png" /></td>
                }
