@model Hero;
<table class="table table-borderless m-0 ms-1 p-0 overflow-hidden w-50">
    <tbody>
        <tr>
            @if (Model.Equipment.ContainsKey(EquipmentEnum.Helmet) && Model.Equipment[EquipmentEnum.Helmet] != null)
            {
                ViewData["eq"] = $"{EquipmentEnum.Helmet.ToString()}Link";
                <td id="@EquipmentEnum.Helmet.ToString()" ondblclick="location.href='@Url.Action("UnEquipItem", "Main" , new { equipment=EquipmentEnum.Helmet, name = ViewData["name"]})'">
                    <partial name="_EquipmentLayout" model="@Model.Equipment[EquipmentEnum.Helmet]" view-data="@ViewData" />
                </td>
            }
            else
            {
                <td id="@EquipmentEnum.Helmet.ToString()"><img class="icon" src="/Images/NullImages\helmet.png" /></td>
            }
            <td rowspan="3" colspan="2">
                <div class="card cardom">
                    <img src="@Url.Action("GetImage", "Main", new { isUserImage = false})" class="card-img heroImg" alt="...">
                    <div class="card-footer">
                        <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                            <div class="progress-bar bg-success text-center" style="width: @Model.GetCurrentXpPercentage%"></div>
                            <small class="justify-content-center d-flex position-absolute w-100">@Model.Level&period;level</small>
                        </div>
                    </div>
                </div>
            </td>
            @if (Model.Equipment.ContainsKey(EquipmentEnum.Necklace) && Model.Equipment[EquipmentEnum.Necklace] != null)
            {
                ViewData["eq"] = $"{EquipmentEnum.Necklace.ToString()}Link";
